<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/body"
    tools:context="iyh.queensbase.my.inyourhand.CreateCampaign">

    <TextView
        android:text="Create New Campaign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:textColor="#fbff128a"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:inputType="none" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Type in new campaign name:"
        android:id="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="25dp"
        android:typeface="sans"
        android:inputType="none"
        android:textColor="#ff000000"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@android:dimen/app_icon_size"
        android:id="@+id/email"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:longClickable="false"
        android:textAlignment="center"
        android:textColor="#ffffffff"
        android:typeface="monospace"
        android:textSize="18dp"
        android:background="#3c14f5ff"
        android:autoText="false"
        android:text="Type in here..."
        android:maxLength="50"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choose the type of new campaign:"
        android:id="@+id/textView2"
        android:gravity="center"
        android:textSize="25dp"
        android:typeface="sans"
        android:inputType="none"
        android:textColor="#ff000000"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promotion"
        android:id="@+id/btnRegister"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="30dp"
        android:textColor="#ffffffff"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:textStyle="italic"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-coupon"
        android:id="@+id/btnLogin"
        android:layout_below="@+id/btnRegister"
        android:layout_marginTop="30dp"
        android:textColor="#ffffffff"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:textStyle="italic"
        android:textSize="25dp" />

</RelativeLayout>
