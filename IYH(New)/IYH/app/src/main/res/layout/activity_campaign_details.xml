<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/body"
    tools:context="iyh.queensbase.my.inyourhand.CampaignDetails">

    <TextView
        android:text="Campaign Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:textColor="#fbff128a"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ListView
            android:contentDescription="@string/title_activity_campaign_details"
            android:fadeScrollbars="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_weight="1"
            android:fastScrollEnabled="true"
            android:focusableInTouchMode="true"
            android:listSelector="#4dffffff"
            android:scrollingCache="false"
            android:smoothScrollbar="true"
            android:overScrollFooter="#4aff089d"
            android:overScrollHeader="#4aff089d"
            android:textFilterEnabled="false"
            android:choiceMode="singleChoice"
            android:clickable="false"
            android:dividerHeight="@dimen/activity_horizontal_margin"
            android:divider="@android:drawable/divider_horizontal_bright"
            android:fastScrollAlwaysVisible="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            tools:listitem="@android:layout/simple_list_item_2"
            android:longClickable="false"
            android:layout_marginTop="25dp" />
    </TableRow>

</RelativeLayout>
